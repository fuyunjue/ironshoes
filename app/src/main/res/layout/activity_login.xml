<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_backgroud_color" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/iv_login_logo"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/dimen150"
                android:layout_height="@dimen/dimen150"
                android:src="@mipmap/activity_login_logo_new"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen30"
            android:layout_marginRight="@dimen/dimen30"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:background="@drawable/share_edittext"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="@dimen/dimen11"
                    android:src="@mipmap/iv_login_user"
                    android:layout_width="@dimen/dimen25"
                    android:layout_height="@dimen/dimen25"/>


                <EditText
                    android:background="@null"
                    android:id="@+id/et_phone"
                    android:layout_width="@dimen/dimen0"
                    android:layout_weight="1"
                    android:textColor="@color/color_9fa2a4"
                    android:padding="@dimen/dimen11"
                    android:text="13612345678"
                    android:layout_height="@dimen/dimen43"
                    android:hint="@string/phone_not_null"
                    android:inputType="phone"
                    android:maxLength="11" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen11"
                android:background="@drawable/share_edittext"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="@dimen/dimen11"
                    android:src="@mipmap/iv_login_password"
                    android:layout_width="@dimen/dimen25"
                    android:layout_height="@dimen/dimen25"/>


                <EditText
                    android:background="@null"
                    android:id="@+id/et_pwd"
                    android:layout_width="@dimen/dimen0"
                    android:layout_weight="1"
                    android:textColor="@color/color_9fa2a4"
                    android:padding="@dimen/dimen11"
                    android:text="admin"
                    android:layout_height="@dimen/dimen43"
                    android:hint="@string/password_not_null"
                    android:inputType="textPassword"
                    android:maxLength="11" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen11"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cb_remenber_login"
                    android:layout_width="0dp"
                    android:gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:textSize="@dimen/dimen14"
                    android:textColor="@color/color_999"
                    android:lines="1"
                    android:layout_height="wrap_content"
                    android:text="@string/remember_password"/>

            </LinearLayout>

            <TextView
                android:id="@+id/btn_login"
                android:layout_marginTop="@dimen/dimen11"
                android:layout_width="fill_parent"
                android:background="@drawable/button_share_blue"
                android:textColor="@color/text_color_white"
                android:gravity="center"
                android:textSize="18sp"
                android:padding="@dimen/dimen8"
                android:text="@string/login_text"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="2">


            <ImageView
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/dimen120"
                android:layout_height="@dimen/dimen120"
                android:src="@mipmap/activity_login_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/dimen16"
                android:textColor="@color/color_login_Company"
                android:text="智能铁鞋信息管理系统"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>