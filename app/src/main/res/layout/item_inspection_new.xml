<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen3"
    android:layout_margin="@dimen/dimen3"
    android:background="@drawable/item_inspection_share"
    android:orientation="vertical">


    <LinearLayout
        android:padding="@dimen/dimen3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_xh"
                android:text="@string/tv_xh"
                style="@style/item_text_xh"/>
        </LinearLayout>

        <LinearLayout
            android:paddingRight="@dimen/dimen5"
            android:paddingLeft="@dimen/dimen5"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="top"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_patrolate"
                        android:text="@string/tv_xh"
                        style="@style/item_text_parent"/>

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/dimen30"
                        android:layout_width="@dimen/dimen130"
                        android:layout_height="@dimen/dimen16">
                        <ImageView
                            android:background="@mipmap/bg_time_interval1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/tv_patroltimeframe"
                            android:text="@string/tv_xh"
                            android:layout_centerInParent="true"
                            android:textColor="@color/text_color_white"
                            android:textSize="@dimen/dimen12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_patrolman"
                    android:text="@string/tv_patrolman"
                    style="@style/item_text_right"
                    android:layout_marginTop="@dimen/dimen1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tx_list"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>